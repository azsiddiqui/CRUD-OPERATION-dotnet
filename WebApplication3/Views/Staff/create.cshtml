
@model WebApplication3.Models.staff
@{
    ViewData["tittle"] = "create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>create</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-12 offset-lg-3">
            <div class="card-header bg-dark ">
                <h2 class="text-center text-primary">
                    add new staff
                </h2>
            </div>
            <div class="card-body">
                <form method="post" asp-action="create">
                    <div class="form-group">
                        <label asp-for="Name"> </label>
            <input type="text" asp-for="Name" class="form-control" placeholder="enter staff name" />
            </div>
                    <div class="form-group">
                        <label asp-for="role"> </label>
            <input type="text" asp-for="role" class="form-control" placeholder="enter staff role" />

                    </div>
               
           
                    <div class="form-group">
                        <label asp-for="salary"> </label>
            <input type="number" asp-for="salary" class="form-control" placeholder="enter salary" />

                    </div>
            
                    <div class="form-group">
                        <label asp-for="DOJ"> </label>
            <input type="datetime" asp-for="DOJ" class="form-control" placeholder="enter doj" />

                    </div>
                        <div class="form-group">
                            <button type="submit" value="Submit" class="btn btn-lg btn-outline-success float-end  ">Submit</button>
                        </div>
                </form>
            </div>
              
            </div>
        </div>
    </div>
   
</body>
</html>
